var audios=document.getElementsByTagName("audio");

function playAll(){
 
 if (audios!=null){
  for (var i = 0; i < audios.length; i++)
   audios[i].play();
  }
else{
alert("No hay contenido audio");
}
 };
function stopAll(){
 if (audios!=null){
  for (var i = 0; i < audios.length; i++)
   audios[i].pause();
  }
 };

 </script>
